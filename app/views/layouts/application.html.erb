<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PlanIT</title>
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=Playwrite+GB+S:ital,wght@0,100..400;1,100..400&family=Sofia+Sans+Extra+Condensed:ital,wght@0,1..1000;1,1..1000&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  
  <%= csp_meta_tag %>
  <%= csrf_meta_tags %>
  
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>

  <!-- Favicon -->
  <%= favicon_link_tag asset_path('planITIcon.png') %>
  <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path('planITIcon.png') %>">
  <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path('planITIcon.png') %>">
  <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path('appleICON.webp') %>">
</head>

<body>
  <%= render "home/header" %>
  <br>
  <div class="container">
    <%= yield %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
