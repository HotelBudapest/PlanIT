<div class="nested-fields">
  <%= f.label :title, 'Poll Title', class: 'form-label' %>
  <%= f.text_field :title, class: 'form-control' %>

  <h4>Poll Options</h4>
  <%= f.fields_for :poll_options do |option_form| %>
    <div class="nested-fields">
      <%= option_form.label :option, 'Poll Option', class: 'form-label' %>
      <%= option_form.text_field :option, class: 'form-control' %>
      <%= option_form.check_box :_destroy %>
      <%= option_form.label :_destroy, 'Remove', class: 'form-check-label' %>
    </div>
  <% end %>
  <%= link_to_add_fields "Add Poll Option", f, :poll_options %>
</div>
